{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      }
    ],
    "regexManagers": [
        {
          "fileMatch": ["^manifest.yaml$"],
          "matchStrings": ["- gomod: (?<depName>.*?) (?<currentValue>.*)\\n"],
          "datasourceTemplate": "go"
        }
    ]
  }
