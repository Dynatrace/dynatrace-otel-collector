{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      }
    ],
    "regexManagers": [
        {
          "fileMatch": ["^manifest.yaml$"],
          "matchStrings": ["- gomod: (?<depName>(go.opentelemetry.io/collector|github.com/open-telemetry/opentelemetry-collector-contrib|github.com/dynatrace/dynatrace-otel-collector)/\\S+?) (?<currentValue>\\S+)\\n"],
          "datasourceTemplate": "go"
        }
    ]
  }
